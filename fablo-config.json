{
  "$schema": "https://github.com/hyperledger-labs/fablo/releases/download/1.1.0/schema.json",
  "global": {
    "fabricVersion": "2.4.0",
    "tls": true,
    "peerDevMode": false
  },
  "orgs": [
    {
      "organization": {
        "name": "Orderer",
        "domain": "orderer.supplychain.com"
      },
      "orderers": [
        {
          "groupName": "group1",
          "type": "raft",
          "instances": 1
        }
      ],
      "tools": {
        "fabloRest": false
      }
    },
    {
      "organization": {
        "name": "farmer",
        "domain": "farmer.supplychain.com"
      },
      "peer": {
        "instances": 1,
        "db": "CouchDb"
      },
      "tools": {
        "fabloRest": false
      }
    },
    {
      "organization": {
        "name": "seller",
        "domain": "seller.supplychain.com"
      },
      "peer": {
        "instances": 1,
        "db": "CouchDb"
      },
      "tools": {
        "fabloRest": false
      }
    },
    {
      "organization": {
        "name": "consumer",
        "domain": "consumer.supplychain.com"
      },
      "peer": {
        "instances": 1,
        "db": "CouchDb"
      },
      "tools": {
        "fabloRest": false
      }
    }
    
  ],
  "channels": [
    {
      "name": "my-channel1",
      "orgs": [
        {
          "name": "farmer",
          "peers": [
            "peer0"
          ]
        },
        {
          "name": "seller",
          "peers": [
            "peer0"
          ]
        },
        {
          "name": "consumer",
          "peers": [
            "peer0"
          ]
        }
      ]
    }
  ],
  "chaincodes": [
    {
      "name": "chaincode1",
      "version": "0.0.1",
      "lang": "node",
      "channel": "my-channel1",
      "directory": "./chaincodes/chaincode-kv-node"
    }
  ]
}